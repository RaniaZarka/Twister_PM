<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommentActivity"
    android:background="@drawable/blueshade"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/commentOriginalMessage"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/commentRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_margin="20dp"
            android:padding="10dp" />
    </LinearLayout>


    <EditText
        android:id="@+id/commentInsertComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Insert your comment" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/commentAdd"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:onClick="commentAddBtn"
            android:textSize="10dp"
            android:text="Add Comment" />

        <Button
            android:id="@+id/commentDeleteBtn"
            android:layout_width="170dp"
            android:layout_marginRight="10dp"
            android:textSize="10dp"
            android:layout_height="wrap_content"
            android:onClick="commentDeleteBtn"
            android:text="Delete Comment" />

        <Button
            android:id="@+id/commentDeleteMessage"
            android:layout_width="170dp"
            android:textSize="10dp"
            android:layout_height="wrap_content"
            android:onClick="commentDeleteMessageBtn"
            android:text="Delete message" />

    </LinearLayout>

</LinearLayout>